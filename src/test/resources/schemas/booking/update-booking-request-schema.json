{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BookingRequest",
  "type": "object",
  "properties": {
    "firstname": {
      "type": "string",
      "minLength": 3,
      "maxLength": 18
    },
    "lastname": {
      "type": "string",
      "minLength": 3,
      "maxLength": 30
    },
    "totalprice": {
      "type": "integer",
      "minimum": 1
    },
    "depositpaid": {
      "type": "boolean"
    },
    "bookingdates": {
      "type": "object",
      "properties": {
        "checkin": {
          "type": "string",
          "format": "date"
        },
        "checkout": {
          "type": "string",
          "format": "date"
        }
      },
      "required": ["checkin", "checkout"],
      "additionalProperties": false
    },
    "additionalneeds": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "phone": {
      "type": "string",
      "minLength": 11,
      "maxLength": 21
    },
    "roomid": {
      "type": "integer",
      "minimum": 1
    }
  },
  "required": [
    "firstname",
    "lastname",
    "depositpaid",
    "bookingdates",
    "roomid"
  ],
  "additionalProperties": false
}